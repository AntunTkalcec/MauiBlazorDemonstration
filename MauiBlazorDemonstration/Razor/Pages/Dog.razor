@page "/dog/{Doggo}/{Breed}/{vm}"

@if (Doggo == null)
{
    <h3>Loading...</h3>
}
else
{
    <!DOCTYPE html>
    <html>
    <head>
        <style>
            /*body {
                margin: 3px, 3px;
                padding: 3px;
                text-align: justify;
                }

                p {
                color: black;
