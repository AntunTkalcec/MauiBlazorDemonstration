<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBlazorDemonstration.Views.DogsDisplayNativePage"
             xmlns:viewmodels="clr-namespace:MauiBlazorDemonstration.ViewModels"
             Title="{Binding Breed}"
             xmlns:models="clr-namespace:MauiBlazorDemonstration.Models"
             x:DataType="viewmodels:DogsNativeViewModel">
    <VerticalStackLayout>
        <Label FontSize="30" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" 
               Text="Here's some info about the dog breed you chose"/>
        <CollectionView ItemsSource="{Binding Doggo}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Dog">
                    <VerticalStackLayout>
                        <Image Source="{Binding image_link}" Aspect="AspectFill" HeightRequest="160" HorizontalOptions="Center" VerticalOptions="StartAndExpand" WidthRequest="160"/>
                        <Label Text="{Binding good_with_children, StringFormat='Good with children: {0}'}"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>